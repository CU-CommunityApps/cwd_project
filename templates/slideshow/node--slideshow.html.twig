{# Override the container markup and cwd_slider() JavaScript function to configure slider options for the site. #}

{% embed "@cwd_base/slideshow/node--slideshow.html.twig" %}
{# Slider Markup #}
{% block container_override %}
  {% if is_front %}
    {# omit markup from the homepage #}
  {% else %}
    {# otherwise, allow the default #}
    {{ parent() }}
  {% endif %}
{% endblock %}

{# Slider Configuration #}
{% block config_override %}
  {% if is_front %}
    {# custom homepage #}
    <script>cwd_slider('#super-header','#slider-caption',8,1,false,true);</script>
  {% else %}
    {# all other pages #}
    <script>cwd_slider('#slider{{ node.id }}','#slider-headline{{ node.id }}',8,1,false,true);</script>
  {% endif %}
{% endblock %}

{% endembed %}
